<div class="container">
  <h1 class='add-cocktail'> Add a cocktail </h1>
  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, class: 'btn btn-success' %>
  <% end %>
  <%= link_to 'All cocktails', root_path, class: 'btn btn-success' %>
</div>
